{
  "$schema": "https://json.schemastore.org/tsconfig",

  "extends": "./tsconfig.build.json",

  "compilerOptions": {
    "incremental": true,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "noEmit": true,

    "baseUrl": "./packages"
  },

  "exclude": ["**/node_modules", "**/dist"]
}
