{
  "$schema": "https://json.schemastore.org/tsconfig",

  "extends": "./tsconfig.build.json",

  "compilerOptions": {
    "incremental": true,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "noEmit": true,

    "types": ["node", "@types/jest"]
  },

  "exclude": ["**/node_modules", "**/dist"],
  "files": []
}
