{
  "$schema": "https://json.schemastore.org/tsconfig",
  
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": ".",
    "rootDir": "packages",
    "types": ["node"]
  },

  "include": ["packages"],
  "exclude": ["**/node_modules", "**/dist", "**/tests"]
}
