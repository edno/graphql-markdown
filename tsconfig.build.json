{
  "$schema": "https://json.schemastore.org/tsconfig",
  
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,

    "types": ["node", "@types/jest"],

    "baseUrl": ".",
    "rootDir": "packages",

    "paths": {
      "@graphql-markdown/*": [
        "*/src/index.ts",
        "*/src/index.js",
        "*/dist/index.js"
      ]
    }
  },

  "include": ["packages"],
  "exclude": ["**/node_modules", "**/dist", "**/tests"]
}
