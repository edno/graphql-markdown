{
  "$schema": "https://json.schemastore.org/tsconfig",
  
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,

    "types": ["node"],

    "baseUrl": ".",
    "rootDir": "packages",

    "paths": {
      "@graphql-markdown/*": ["packages/*/src/index.ts"]
    }
  },

  "include": ["packages"],
  "exclude": ["**/node_modules", "**/dist", "**/tests/*.test.ts"],
  "files": []
}
