{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "@graphql-markdown/core/*": ["packages/core/src/*"],
      "@graphql-markdown/diff": ["packages/diff/src"],
      "@graphql-markdown/docusaurus": ["packages/docusaurus/src"],
      "@graphql-markdown/printer-legacy": ["packages/printer-legacy/src"],
      "@graphql-markdown/utils/*": ["packages/utils/src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules", "packages/*/dist", "packages/*/tests"]
}
