{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist"
  },
  "include": ["./src/**/*.ts"],
  "ts-node": {
    "files": true,
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "module": "ES2022"
    },
    "moduleTypes": {
      "src/**/*": "esm",
      "tests/**/*": "esm"
    }
  },
  "references": [
    { "path": "./packages/core" }
  ]
}
