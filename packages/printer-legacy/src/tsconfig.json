{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["./src/**/*.ts"],
  "ts-node": {
    "files": true,
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "module": "ES2022"
    },
    "ignore": [
      "(?:^|/)node_modules/",
      "(?:^|/)../"
    ],
    "moduleTypes": {
      "src/**/*": "esm",
      "tests/**/*": "esm"
    }
  }
}
