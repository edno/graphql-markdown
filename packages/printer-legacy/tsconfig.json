{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.cjs", "dist"],
  "ts-node": {
    "files": true,
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "module": "ES2022"
    },
    "ignore": ["(?:^|/)node_modules/", "(?:^|/).*/dist/"],
    "moduleTypes": {
      "src/**/*": "esm",
      "tests/**/*": "esm"
    }
  }
}
