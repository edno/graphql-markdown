{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist/"
  },
  "references": [
    { "path": "../utils" },
    { "path": "../core" }
  ],
  "include": ["src/**/*.ts"],
  "ts-node": {
    "files": true,
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "module": "ES2022"
    },
    "ignore": ["(?:^|/)node_modules/", "(?:^|/).*/dist/"],
    "moduleTypes": {
      "src/**/*": "esm",
      "tests/**/*": "esm"
    }
  }
}
