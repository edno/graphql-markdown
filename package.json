{
  "name": "@edno/docusaurus2-graphql-doc-generator",
  "homepage": "https://github.com/edno/docusaurus2-graphql-doc-generator",
  "description": "Docusaurus 2 plugin for generating Markdown documentation from a GraphQL schema.",
  "bugs": {
    "url": "https://github.com/edno/docusaurus2-graphql-doc-generator/issues"
  },
  "version": "1.3.0",
  "license": "MIT",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edno/docusaurus2-graphql-doc-generator.git"
  },
  "keywords": [
    "docusaurus2",
    "graphql",
    "graphql-schema",
    "documentation",
    "plugin"
  ],
  "author": "Gregory Heitz",
  "scripts": {
    "prettier": "prettier --write \"**/*.{js,json,md}\"",
    "lint": "eslint --cache \"**/*.js\" --fix",
    "lint:ci": "eslint \"**/*.js\"",
    "danger": "danger local -b main --failOnErrors",
    "danger:ci": "danger ci -b main",
    "test": "jest",
    "test:unit": "jest --projects tests/unit",
    "test:integration": "jest --projects tests/integration",
    "test:ci": "jest --runInBand --noStackTrace --ci",
    "test:e2e": "docker-compose run --rm docusaurus2-graphql-doc-generator jest",
    "pre-commit": "yarn prettier && yarn lint",
    "pre-push": "yarn lint:ci && yarn test --bail && yarn test:coverage && yarn danger",
    "test:stryker": "stryker run",
    "test:stryker:ci": "stryker run --reporters=progress-append-only --reporters=clear-text",
    "test:coverage": "sh ./scripts/coverage.sh",
    "demo": "docker-compose run --service-ports --rm --workdir=\"/usr/src/app/docusaurus2\" docusaurus2-graphql-doc-generator sh start.sh",
    "build:e2e": "docker-compose run --service-ports --rm --workdir=\"/usr/src/app/docusaurus2\" docusaurus2-graphql-doc-generator sh build.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit",
      "pre-push": "yarn pre-push"
    }
  },
  "dependencies": {
    "@graphql-inspector/core": "^2.6.1",
    "@graphql-tools/graphql-file-loader": "^6.2.7",
    "@graphql-tools/json-file-loader": "^7.0.1",
    "@graphql-tools/load": "^6.2.8",
    "@graphql-tools/url-loader": "^7.0.3",
    "@oclif/command": "^1.8.0",
    "chalk": "^4.1.1",
    "fs-extra": "^10.0.0",
    "graphql": "^15.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "prettier": "^2.3.2",
    "slugify": "^1.6.0"
  },
  "files": [
    "assets"
  ],
  "devDependencies": {
    "@stryker-mutator/core": "^5.2.2",
    "@stryker-mutator/jest-runner": "^5.2.2",
    "colors": "^1.4.0",
    "danger": "^10.6.6",
    "diff": "^5.0.0",
    "directory-tree": "^2.2.9",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "mock-fs": "^5.0.0",
    "npm": "^7.20.1",
    "nyc": "^15.1.0",
    "yarn": "^1.22.10"
  },
  "prettier": {
    "singleQuote": false,
    "bracketSpacing": true,
    "proseWrap": "preserve",
    "overrides": [
      {
        "files": "*.js",
        "options": {
          "arrowParens": "always",
          "printWidth": 80,
          "trailingComma": "all",
          "tabWidth": 2
        }
      }
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "jest": true,
      "commonjs": true,
      "jest/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "prettier"
    ],
    "plugins": [
      "jest"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js"
          ]
        }
      }
    },
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "tests/**/*.js"
        ],
        "extends": [
          "eslint:recommended",
          "plugin:prettier/recommended",
          "prettier",
          "plugin:jest/recommended",
          "plugin:jest/style"
        ]
      }
    ],
    "rules": {
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": false
        }
      ]
    }
  },
  "directories": {
    "test": "tests"
  }
}
