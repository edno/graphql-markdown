{
  "name": "@edno/docusaurus2-graphql-doc-generator",
  "homepage": "https://edno.github.io/graphql-markdown",
  "description": "Docusaurus 2 plugin for generating Markdown documentation from a GraphQL schema.",
  "bugs": {
    "url": "https://github.com/edno/graphql-markdown/issues"
  },
  "version": "1.4.1",
  "license": "MIT",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edno/graphql-markdown.git"
  },
  "keywords": [
    "docusaurus2",
    "graphql",
    "graphql-schema",
    "documentation",
    "plugin"
  ],
  "author": "Gregory Heitz",
  "scripts": {
    "prettier": "prettier --write \"**/*.{js,json,md}\"",
    "lint": "eslint --cache \"**/*.js\" --fix",
    "lint:ci": "eslint \"**/*.js\"",
    "danger": "danger local -b main --failOnErrors",
    "danger:ci": "danger ci -b main",
    "test": "jest",
    "test:unit": "jest --projects tests/unit",
    "test:integration": "jest --projects tests/integration",
    "test:ci": "jest --runInBand --noStackTrace --ci",
    "test:smoke": "earthly +smoke-test",
    "pre-commit": "yarn prettier && yarn lint",
    "pre-push": "earthly +all",
    "test:stryker": "stryker run",
    "test:stryker:ci": "stryker run --reporters=progress-append-only --reporters=clear-text",
    "test:coverage": "sh ./scripts/coverage.sh",
    "demo": "earthly +image && docker run --rm --name graphql-markdown-demo -p 8080:8080/tcp graphql-markdown:demo",
    "build:smoke": "earthly +image"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit",
      "pre-push": "yarn pre-push"
    }
  },
  "dependencies": {
    "@graphql-inspector/core": "^2.7.0",
    "@graphql-tools/graphql-file-loader": "^7.0.6",
    "@graphql-tools/json-file-loader": "^7.1.3",
    "@graphql-tools/load": "^7.1.9",
    "@graphql-tools/url-loader": "^7.0.12",
    "@oclif/command": "^1.8.0",
    "chalk": "^4.1.2",
    "fs-extra": "^10.0.0",
    "graphql": "^15.5.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "prettier": "^2.3.2",
    "slugify": "^1.6.0"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^5.3.0",
    "@stryker-mutator/jest-runner": "^5.3.0",
    "colors": "^1.4.0",
    "danger": "^10.6.6",
    "diff": "^5.0.0",
    "directory-tree": "^2.3.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "jest-file-snapshot": "^0.5.0",
    "mock-fs": "^5.0.0",
    "npm": "^7.21.1",
    "nyc": "^15.1.0",
    "yarn": "^1.22.11"
  },
  "prettier": {
    "singleQuote": false,
    "bracketSpacing": true,
    "proseWrap": "preserve",
    "overrides": [
      {
        "files": "*.js",
        "options": {
          "arrowParens": "always",
          "printWidth": 80,
          "trailingComma": "all",
          "tabWidth": 2
        }
      }
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "jest": true,
      "commonjs": true,
      "jest/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "prettier"
    ],
    "plugins": [
      "jest"
    ],
    "globals": {
      "__OS__": "writable"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js"
          ]
        }
      }
    },
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "tests/**/*.js"
        ],
        "extends": [
          "eslint:recommended",
          "plugin:prettier/recommended",
          "prettier",
          "plugin:jest/recommended",
          "plugin:jest/style"
        ]
      }
    ],
    "rules": {
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": false
        }
      ]
    }
  },
  "directories": {
    "test": "tests"
  }
}
