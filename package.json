{
  "name": "graphql-markdown",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*",
    "website",
    "config"
  ],
  "scripts": {
    "prepare": "husky install",
    "prettier": "prettier \"packages/**/{src,tests,assets}/**/*.{js,json,md}\"",
    "lint": "eslint \"packages/**/{src,tests,assets}/**/*.js\""
  },
  "prettier": "./config/.prettierrc.js",
  "eslintConfig": {
    "extends": [
      "./config/.eslintrc.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    },
    "cz-emoji": {
      "skipQuestions": [
        "scope",
        "issues",
        "breaking"
      ],
      "types": [
        {
          "emoji": "✨",
          "code": ":sparkles:",
          "description": "Add a new feature.",
          "name": "feat"
        },
        {
          "emoji": "🐛",
          "code": ":bug:",
          "description": "Fix a bug.",
          "name": "fix"
        },
        {
          "emoji": "📦️",
          "code": ":package:",
          "description": "Update dependencies.",
          "name": "build"
        },
        {
          "emoji": "🔧",
          "code": ":wrench:",
          "description": "Update configuration files.",
          "name": "conf"
        },
        {
          "emoji": "♻️",
          "code": ":recycle:",
          "description": "Refactor code.",
          "name": "refactor"
        },
        {
          "emoji": "🧪",
          "code": ":test_tube:",
          "description": "Update tests.",
          "name": "test"
        },
        {
          "emoji": "👷",
          "code": ":construction_worker:",
          "description": "Update CI.",
          "name": "ci"
        },
        {
          "emoji": "📝",
          "code": ":memo:",
          "description": "Update documentation.",
          "name": "docs"
        },
        {
          "emoji": "🔖",
          "code": ":bookmark:",
          "description": "Add a tag / release.",
          "name": "tag"
        },
        {
          "emoji": "🧑‍💻",
          "code": ":technologist:",
          "description": "Other changes.",
          "name": "other"
        }
      ]
    }
  },
  "dependencies": {
    "@graphql-markdown/docusaurus": "file:packages/docusaurus"
  },
  "devDependencies": {
    "@graphql-markdown/config": "file:config",
    "@stryker-mutator/core": "6.2.3",
    "@stryker-mutator/jest-runner": "6.2.3",
    "commitizen": "4.2.5",
    "cz-emoji": "1.3.1",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.1.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.1",
    "pinst": "3.0.0",
    "prettier": "2.7.1",
    "diff": "5.1.0",
    "lodash.filter": "4.6.0",
    "jest": "29.2.0",
    "graphql": "16.6.0"
  },
  "resolutions": {
    "chalk": "5.1.2"
  }
}
