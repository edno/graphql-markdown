{
  "name": "@graphql-markdown/monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "./packages/**",
    "./website"
  ],
  "scripts": {
    "prettier": "prettier --config ./tools/.prettierrc \"packages/**/{src,tests,assets}/**/*.{js,json,md}\"",
    "lint": "eslint --config ./tools/.eslintrc.json \"packages/**/{src,tests,assets}/**/*.js\"",
    "test": "jest",
    "stryker": "stryker run ./tools/stryker.conf.js"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    },
    "cz-emoji": {
      "skipQuestions": [
        "scope",
        "issues",
        "breaking"
      ],
      "types": [
        {
          "emoji": "✨",
          "code": ":sparkles:",
          "description": "Add a new feature.",
          "name": "feat"
        },
        {
          "emoji": "🐛",
          "code": ":bug:",
          "description": "Fix a bug.",
          "name": "fix"
        },
        {
          "emoji": "📦️",
          "code": ":package:",
          "description": "Update dependencies.",
          "name": "build"
        },
        {
          "emoji": "🔧",
          "code": ":wrench:",
          "description": "Update configuration files.",
          "name": "conf"
        },
        {
          "emoji": "♻️",
          "code": ":recycle:",
          "description": "Refactor code.",
          "name": "refactor"
        },
        {
          "emoji": "🧪",
          "code": ":test_tube:",
          "description": "Update tests.",
          "name": "test"
        },
        {
          "emoji": "👷",
          "code": ":construction_worker:",
          "description": "Update CI.",
          "name": "ci"
        },
        {
          "emoji": "📝",
          "code": ":memo:",
          "description": "Update documentation.",
          "name": "docs"
        },
        {
          "emoji": "🔖",
          "code": ":bookmark:",
          "description": "Add a tag / release.",
          "name": "tag"
        },
        {
          "emoji": "🧑‍💻",
          "code": ":technologist:",
          "description": "Other changes.",
          "name": "other"
        }
      ]
    }
  },
  "devDependencies": {
    "commitizen": "4.2.5",
    "cz-emoji": "1.3.1",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.1.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.1",
    "pinst": "3.0.0",
    "prettier": "2.7.1"
  }
}
